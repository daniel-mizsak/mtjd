{
  // Base settings
  // Editor
  "editor.accessibilitySupport": "off",
  "editor.dragAndDrop": false,
  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "MesloLGS Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.55,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 0.8,
  // Explorer
  "explorer.sortOrderLexicographicOptions": "upper",
  // Files
  "files.associations": {
    "**/ansible/**/*.yml": "ansible",
    "**/tasks/*.yml": "ansible",
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.ansible": true,
    "**/.coverage": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.tox": true,
    "**/.venv": true,
    "**/coverage.xml": true,
    "**/htmlcov": true,
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Git
  "diffEditor.ignoreTrimWhitespace": false,
  "git.allowForcePush": true,
  "git.blame.editorDecoration.enabled": true,
  "git.confirmForcePush": false,
  "git.confirmSync": false,
  "git.replaceTagsWhenPull": true,
  "git.suggestSmartCommit": false,
  // Search
  "search.exclude": {
    "**/.venv": true,
  },
  // Telemetry
  "telemetry.telemetryLevel": "off",
  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,
  // Update
  "update.mode": "none",
  // Window
  "window.zoomLevel": -0.35,
  // Workbench
  "workbench.colorTheme": "Default Dark+",
  "workbench.editorAssociations": {
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "workbench.editor.wrapTabs": true,
  "workbench.enableExperiments": false,
  "workbench.settings.editor": "json",
  "workbench.settings.openDefaultSettings": true,
  "workbench.sideBar.location": "left",
  // Extensions
  /*
  .NET Install Tool
  1Password
  Alejandra
  Ansible
  autoDocstring - Python Docstring Generator
  Bash IDE
  Better Comments
  C#
  C# Dev Kit
  Code Runner
  Code Spell Checker
  CodeSnap
  Container Tools
  CSharpier - Code formatter
  Dev Containers
  Docker DX
  Even Better TOML
  Github Actions
  GitHub Copilot
  GitHub Copilot Chat
  ? GitHub Pull Requests
  Go
  hadolint
  HashiCorp Terraform
  indent-rainbow
  IntelliCode for C# Dev Kit
  Jupyter
  Jupyter Cell Tags
  Jupyter Keymap
  Jupyter Notebook Renderers
  Jupyter Slide Show
  LaTeX Workshop
  Live Share
  Mypy Type Checker
  Nix IDE
  PowerShell
  psioniq File Header
  Pylance
  Python
  Python Debugger
  Rainbow CSV
  Remote - SSH
  Remote - SSH: Editing Configuration Files
  Remote Explorer
  Ruff
  SQLite
  VSCode Neovim
  vscode-just
  WSL
  YAML
  */
  // .NET Install Tool
  "dotnet.automaticallyCreateSolutionInWorkspace": false,
  "dotnetAcquisitionExtension.enableTelemetry": false,
  // 1Password
  "1password.editor.suggestStorage": false,
  // Ansible
  "[ansible]": {
    "editor.defaultFormatter": "redhat.ansible",
  },
  "ansible.lightspeed.enabled": false,
  "redhat.telemetry.enabled": false,
  // Bash IDE
  "bashIde.shfmt.spaceRedirects": true,
  // C#
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode",
  },
  "csharp.experimental.debug.hotReload": true,
  // Code Runner
  "code-runner.executorMap": {
    "csharp": "cd $dir && dotnet run",
    "python": "$pythonPath $fullFileName",
  },
  "code-runner.runInTerminal": true,
  "code-runner.ignoreSelection": true,
  // Code Spell Checker
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.diagnosticLevelFlaggedWords": "Hint",
  "cSpell.showStatus": false,
  // CodeSnap
  "codesnap.containerPadding": "1em",
  "codesnap.showWindowControls": false,
  // Docker
  "[dockerfile]": {
    "editor.tabSize": 1,
  },
  "docker.extension.enableComposeLanguageServer": true,
  // Even Better TOML
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.tabSize": 2,
  },
  "evenBetterToml.formatter.indentEntries": true,
  "evenBetterToml.formatter.indentTables": true,
  // GitHub Actions
  "[github-actions-workflow]": {
    "editor.tabSize": 2,
  },
  // GitHub Copilot
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "markdown": true,
  },
  // indent-rainbow
  "indentRainbow.includedLanguages": [
    "ansible",
    "github-actions-workflow",
    "json",
    "jsonc",
    "yaml",
    "yml",
  ],
  // Jupyter
  "jupyter.askForKernelRestart": false,
  "jupyter.experiments.enabled": false,
  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",
  // Mypy Type Checker
  "mypy-type-checker.args": [
    "--ignore-missing-imports",
    "--pretty",
    "--show-column-numbers",
    "--show-error-context",
    "--strict",
    "--warn-unreachable",
    "--warn-unused-ignores",
  ],
  "mypy-type-checker.path": [
    "${workspaceFolder}/.venv/bin/mypy",
  ],
  // Nix IDE
  "nix.formatterPath": "alejandra",
  // PowerShell
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell",
  },
  "powershell.powerShellAdditionalExePaths": {
    "pwsh": "/run/current-system/sw/bin/pwsh",
  },
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.avoidSemicolonsAsLineTerminators": true,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.useConstantStrings": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.startAutomatically": false,
  // psioniq File Header
  "psi-header.config": {
    "author": "Daniel Mizsak",
    "authorEmail": "info@pythonvilag.hu",
    "blankLinesAfter": 1,
    "forceToTop": true,
  },
  "psi-header.lang-config": [
    {
      "language": "python",
      "begin": "\"\"\"",
      "end": "\"\"\"",
    }
  ],
  "psi-header.templates": [
    {
      "language": "python",
      "template": [
        "Short description and source of base code.",
        "",
        "@author \"<<author>>\" <<<authoremail>>>",
      ]
    }
  ],
  // Python
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.sortMembers": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.defaultFoldingRangeProvider": "charliermarsh.ruff",
    "editor.rulers": [
      80,
      120,
    ],
  },
  "python.analysis.typeCheckingMode": "off",
  "python.experiments.enabled": false,
  // Remote - SSH
  "remote.SSH.remotePlatform": {
    "*": "linux",
    "nixos": "linux",
  },
  // Ruff
  "ruff.fixAll": false,
  "ruff.lineLength": 120,
  "ruff.nativeServer": "on",
  // VSCode Neovim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
  },
}
